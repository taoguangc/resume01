---
import { ClientRouter } from 'astro:transitions'
import BaseHead, { type Props as HeadProps } from '@components/layout/BaseHead.astro'
import Header from '@components/layout/Header.astro'
import Footer from '@components/layout/Footer.astro'

export type Props = HeadProps

const { ...head } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-pt-[90px] break-words antialiased">
  <head>
    <BaseHead {...head} />
    <ClientRouter />
  </head>
  <body class="flex min-h-screen flex-col bg-surface font-sans tracking-tight">
    <Header />
    <main class="container flex flex-col gap-y-4 md:my-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>
