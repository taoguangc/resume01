---
import { Icon } from 'astro-icon/components'

interface Props {
  title?: string
  desc?: string
  items?: {
    code: string
    name: string
    level: string
  }[]
}

const { title, desc, items = [] } = Astro.props
---

<section class="mx-6 rounded-xl border border-neutral-200 bg-white md:mx-0" id="languages" data-in="zoomIn">
  <div class="border-b border-neutral-200 p-6 md:p-8">
    <div class="inline-block rounded-lg border border-neutral-200 bg-neutral-100 p-3">
      <Icon name="languages" class="h-6 w-6" />
    </div>
    <h2 class="my-4 text-xl font-medium tracking-tight md:text-2xl">{title}</h2>
    <p class="max-w-96 text-sm font-medium text-content">{desc}</p>
  </div>

  <div class="p-6 md:p-8">
    <ul class="space-y-6 text-xs font-medium text-primary">
      {
        items.map((item) => (
          <li class="flex flex-col gap-1 border-b border-b-neutral-200 pb-6 last:border-b-0 last:pb-2">
            <div class="flex items-center gap-3">
              <div class="inline-flex h-8 w-8 items-center justify-center rounded-lg border border-neutral-200 bg-neutral-100 font-medium uppercase">
                {item.code}
              </div>
              <span class="text-base font-medium">{item.name}</span>
            </div>
            <p class="text-sm text-content">{item.level}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
