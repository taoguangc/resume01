---
import { Icon } from 'astro-icon/components'
import { formatDateToMonthYear } from '@utils/common'

interface Props {
  title?: string
  desc?: string
  items?: {
    award: string
    issuedBy: string
    category: string
    desc: string
    Date: string
  }[]
}

const { title, desc, items = [] } = Astro.props
---

<section class="mx-6 rounded-xl border border-neutral-200 bg-white md:mx-0" id="awards" data-in="zoomIn">
  <div class="border-b border-neutral-200 p-6 md:p-8">
    <div class="inline-block rounded-lg border border-neutral-200 bg-neutral-100 p-3">
      <Icon name="awards" class="h-6 w-6" />
    </div>
    <h2 class="my-4 text-xl font-medium tracking-tight md:text-2xl">{title}</h2>
    <p class="max-w-96 text-sm font-medium text-content">{desc}</p>
  </div>

  <div class="p-6 md:p-8">
    <ul class="grid grid-cols-1 gap-8 text-xs font-medium text-content md:grid-cols-2">
      {
        items.map((item) => (
          <li>
            <div class="md:items-start">
              <div class="flex flex-col gap-2">
                <h3 class="text-base font-medium text-primary">{item.award}</h3>
                <p>
                  Issued by {item.issuedBy} Â· {item.category}
                </p>
                <p class="text-sm text-gray-600">{item.desc}</p>
              </div>
              <div class="my-4">
                <div class="inline-flex items-center rounded border border-neutral-200 px-3 py-2 leading-none">
                  <Icon name="calendar" class="mr-1 h-3 w-3" />
                  <span>{formatDateToMonthYear(item.Date)}</span>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
