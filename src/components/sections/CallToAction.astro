---
interface Props {
  headline?: string
  actionLink?: {
    text: string
    href?: string
  }
}

const { headline, actionLink } = Astro.props
---

<section class='bg-white'>
  <div class='container mx-auto py-24 md:py-32 text-center'>
    {headline && <h3 class='text-4xl md:text-7xl font-bold mb-8' set:html={headline} />}
    {
      actionLink && (
        <a href={actionLink.href} class='text-4xl md:text-7xl font-bold underline hover:no-underline text-primary transition-colors inline-block'>
          {actionLink.text}
        </a>
      )
    }
  </div>
</section>
